<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.octavioben.momdaygiftcard.MainActivity"
    android:padding="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/momappbackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/background">

        <FrameLayout
            android:background="@drawable/momappcuadroanimacion"
            android:id="@+id/cuadritoanimacion"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="370dp"
            android:alpha="1"
            android:layout_width="150dp"
            android:layout_height="250dp">

        </FrameLayout>

        <FrameLayout
            android:background="@drawable/momappboxtop"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="305dp"
            android:layout_height="125dp"
            android:layout_width="225dp"
            android:id="@+id/tapa"
            android:clickable="true">

        </FrameLayout>

        <FrameLayout
            android:layout_marginTop="425dp"
            android:layout_marginLeft="57dp"
            android:background="@drawable/momappbox"
            android:layout_height="175dp"
            android:layout_width="275dp"
            android:id="@+id/regalo">

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/momappbackgroundopenbox"
            android:id="@+id/backgroundcajaabierta"
            android:alpha="1">

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mensaje"
            android:background="@drawable/momappmessage"
            android:alpha="1">

        </FrameLayout>

        <FrameLayout
            android:layout_height="77dp"
            android:id="@+id/botonvolver"
            android:background="@drawable/momappvolverboton"
            android:layout_width="226dp"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="75dp">

        </FrameLayout>

    </FrameLayout>
</RelativeLayout>
